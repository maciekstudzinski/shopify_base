<style>
  .not-found-template {}
</style>

<div class="max-w-md">
  <h1 class="text-5xl font-bold my-4 text-center">{{ section.settings.title }}</h1>
  <div class="my-4">
    <p class="text-base d:text-xl leading-normal">{{ section.settings.subtext_title }}</p>
  </div>
  <div class="my-4">
    {% if section.settings.button_url == blank %}
      {% assign shop_url = shop.secure_url %}
    {% else %}
      {% assign shop_url = section.settings.button_url %}
    {% endif %}
    <a href="{{shop_url}}" class="px-4 py-[10px] text-base font-medium shadow bg-green-600 text-white hover:bg-green-800">{{ section.settings.button_label }}</a>
  </div>
</div>

{% schema %}
  {
    "name": "Template 404",
    "tag": "section",
    "class": "not-found-template flex items-center justify-center text-center h-[100vh]",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "default": "404",
        "label": "404 heading title"
      }, {
        "type": "text",
        "id": "subtext_title",
        "default": "The page you're looking for was not found.",
        "label": "404 subttext title"
      }, {
        "type": "text",
        "id": "button_label",
        "default": "Back to home page",
        "label": "Home button label"
      }, {
        "type": "url",
        "id": "button_url",
        "label": "Button url"
      }
    ]
  }
{% endschema %}